{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [
			"DOM",
			"ES6"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"main_failed.ts"
	]
}
